{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "types": ["svelte", "node"]
  },
  "extends": "@tsconfig/svelte/tsconfig.json",
  "exclude": ["node_modules/*", "public/*", "*.cjs", "src/routes/__layout.svelte"],
  "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.svelte"]
}
