{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "newLine": "lf",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "jsxImportSource": "solid-js",
    "isolatedModules": true,
    "types": [
      "node",
      "@types/mdx",
      "vite/client",
      "solid-jsx/types"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "baseUrl": ".",
    "paths": {
      "$": [
        "src"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "vite.config.ts",
    "./scripts",
    "src/types.d.ts",
    "./e2e/*.ts",
    "src/pages/.tsx",
    "content/*.mdx"
  ],
  "exclude": [
    "node_modules/"
  ]
}