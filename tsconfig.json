{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "newLine": "lf",
    "sourceMap": true,
    "jsxImportSource": "solid-jsx",
    "types": ["vite/client", "solid-mdx/types", "solid-jsx/types", "vite-plugin-pwa/client"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
    "baseUrl": ".",
    "paths": {
      "$": ["src"]
    }
  },
  "include": [
    "./src/**/*",
    "vite.config.ts",
    "./scripts",
    "src/types.d.ts",
    "./e2e/*.ts",
    "src/pages/.tsx",
    "content/*.mdx"
  ],
  "exclude": ["node_modules/"]
}
